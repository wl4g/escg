<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
	<id>jar-with-dependencies</id>
	<formats>
		<format>tar</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/script</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/script/windows</directory>
			<outputDirectory>bin/windows</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>conf</outputDirectory>
			<excludes>
				<exclude>script/**</exclude>
			</excludes>
			<includes>
				<include>dubbo/**</include>
				<include>sbf/**</include>
				<include>scf/**</include>
				<include>cert.d/**</include>
				<include>script/**</include>
				<include>default-webapps/**</include>
				<include>static/**</include>
				<include>*.yml</include>
				<include>*.yaml</include>
				<include>*.json</include>
				<include>*.conf</include>
				<include>*.tom</include>
				<include>*.toml</include>
				<include>*.hcon</include>
				<include>*.ini</include>
				<include>*.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
				<exclude>*-docker-info.jar</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>ext-lib</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>log</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>site-docs</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>src</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>${groupId}:${artifactId}</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>